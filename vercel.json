{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "OCR_SPACE_API_KEY": "@ocr_space_api_key",
    "NODE_ENV": "production",
    "APP_VERSION": "2.1"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}